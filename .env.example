# Copy this file to .env.local for local development

# Required for production
DATABASE_URL="postgresql://user:password@localhost:5432/mcp_bridge"
NEXTAUTH_SECRET="your-generated-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# Primary OAuth: Google (recommended for authentication)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Optional: GitHub OAuth (alternative authentication)
GITHUB_ID="your-github-oauth-app-id"
GITHUB_SECRET="your-github-oauth-app-secret"

# App URL (for dynamic URL generation)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Admin configuration
ADMIN_EMAILS="admin@contextlayer.com,your-admin-email@domain.com"
NEXT_PUBLIC_ADMIN_EMAILS="admin@contextlayer.com,your-admin-email@domain.com"

# Development/Docker settings
NODE_ENV=development
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mcp_bridge
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379

# MCP Bridge specific settings
MCP_BRIDGE_PORT=3000
MCP_BRIDGE_HOST=0.0.0.0

# Logging and performance
LOG_LEVEL=info
DEFAULT_RATE_LIMIT_RPM=100
DEFAULT_RATE_LIMIT_BURST=20
CACHE_TTL_SECONDS=300
CACHE_ENABLED=true

# Generate NextAuth secret with: openssl rand -base64 32