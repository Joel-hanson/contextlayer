{
  "name": "contextlayer",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "author": {
    "name": "Joel Hanson",
    "email": "joelhanson.j@gmail.com",
    "url": "https://github.com/Joel-hanson"
  },
  "description": "Transform any REST API into a Model Context Protocol (MCP) server for AI assistants",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "api-bridge",
    "ai-tools",
    "claude",
    "rest-api",
    "contextlayer",
    "ai-assistant",
    "openapi",
    "swagger",
    "nextjs",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Joel-hanson/contextlayer.git"
  },
  "bugs": {
    "url": "https://github.com/Joel-hanson/contextlayer/issues"
  },
  "homepage": "https://github.com/Joel-hanson/contextlayer#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate && prisma migrate deploy",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:migrate:deploy": "dotenv -e .env.local -- prisma migrate deploy",
    "db:reset": "dotenv -e .env.local -- prisma migrate reset",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:seed": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "preview:seed": "dotenv -e .env.preview -- tsx prisma/seed.ts",
    "prod:migrate": "vercel env pull .env.production --environment=production && dotenv -e .env.production -- db:migrate:deploy && dotenv -e .env.production -- next build",
    "prod:seed": "vercel env pull .env.production --environment=production && dotenv -e .env.production -- tsx prisma/seed.ts",
    "vercel:setup": "./scripts/setup-production.sh",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@hookform/resolvers": "^5.2.1",
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@next/third-parties": "^15.4.6",
    "@prisma/client": "^6.15.0",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@sentry/nextjs": "^10.5.0",
    "@types/bcryptjs": "^2.4.6",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "next-auth": "^4.24.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prisma": "^6.15.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}